{
  "publisher": "lewxdev",
  "name": "vscode-glyph",
  "version": "0.2.0",
  "displayName": "%displayName%",
  "description": "%description%",
  "icon": "static/icon.png",
  "repository": "github:lewxdev/vscode-glyph",
  "license": "MIT",
  "main": "dist/extension.js",
  "engines": {
    "vscode": "^1.87.0"
  },
  "galleryBanner": {
    "color": "#62646a",
    "theme": "dark"
  },
  "sponsor": {
    "url": "https://buymeacoffee.com/lewxdev"
  },
  "categories": [
    "Themes"
  ],
  "extensionKind": [
    "ui"
  ],
  "keywords": [
    "customization",
    "icon-theme",
    "icons",
    "minimal",
    "theme"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "%displayName%",
      "properties": {
        "glyph.iconConfig": {
          "description": "%glyph.iconConfig.description%",
          "type": "object",
          "properties": {
            "colorDefault": {
              "description": "%glyph.iconConfig.defaultColor.description%",
              "type": "string",
              "format": "color-hex",
              "default": "#7b7d84"
            },
            "colorLight": {
              "description": "%glyph.iconConfig.lightColor.description%",
              "type": "string",
              "format": "color-hex",
              "default": "#62646a"
            }
          }
        }
      }
    },
    "iconThemes": [
      {
        "id": "glyph.legacy-original",
        "label": "%iconThemeLabelLegacy%",
        "path": "dist/fileicons/legacy-original-icon-theme.json"
      },
      {
        "id": "glyph.legacy-minimal",
        "label": "%iconThemeLabelMinimal%",
        "path": "dist/fileicons/legacy-minimal-icon-theme.json"
      }
    ]
  },
  "scripts": {
    "prepare": "husky",
    "build:fonts": "fantasticon",
    "build:dist": "tsc",
    "build": "npm-run-all -s build:*"
  },
  "dependencies": {
    "lodash": "^4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19",
    "@commitlint/config-conventional": "^19",
    "@tsconfig/strictest": "^2",
    "@types/lodash": "^4",
    "@types/vscode": "^1.87",
    "@vscode/vsce": "^2",
    "fantasticon": "^2",
    "husky": "^9",
    "npm-run-all": "^4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
